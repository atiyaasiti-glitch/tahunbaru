      overflow: hidden;
    }

    canvas { position: fixed; top: 0; left: 0; z-index: 1; }

    .card {
      position: relative;
      z-index: 2;
      background: rgba(255, 255, 255, 0.12);
      backdrop-filter: blur(14px);
      border-radius: 22px;
      padding: 28px;
      width: 90%;
      max-width: 420px;
      text-align: center;
      box-shadow: 0 25px 50px rgba(0, 0, 0, 0.45);
      animation: fadeIn 2s ease;
    }

    h1 { font-size: 2.1rem; color: #b3e5ff; }
    h2 { font-size: 1.4rem; margin: 8px 0; }

    .countdown { font-size: 1.1rem; margin: 12px 0; }

    input {
      width: 100%;
