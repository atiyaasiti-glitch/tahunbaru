<body>

  <canvas id="fx"></canvas>

  <audio id="music" loop>
    <source src="https://cdn.pixabay.com/audio/2022/12/31/audio_9c6c9d20bb.mp3" type="audio/mpeg">
  </audio>

  <div class="card">
    <h1>ðŸ’™ Undangan Tahun Baru ðŸ’™</h1>
    <h2 id="nameText">2026</h2>

    <div class="countdown" id="countdown">Menuju tahun baru...</div>

    <input type="text" id="nameInput" placeholder="Nama kamu" />

    <p>Semoga momen pergantian tahun ini membawa kebahagiaan, cinta, dan harapan baru âœ¨</p>

    <button class="btn" onclick="startCelebration()">ðŸŽ† Mulai</button>
    <button class="btn secondary" onclick="toggleMusic()">ðŸ”Š Musik</button>
    <button class="btn" onclick="shareWA()">ðŸ“¤ Share WA</button>
  </div>

  <script>
    const canvas = document.getElementById('fx');
    const ctx = canvas.getContext('2d');
    const music = document.getElementById('music');
    const nameInput = document.getElementById('nameInput');
    const nameText = document.getElementById('nameText');
    const countdownEl = document.getElementById('countdown');

    canvas.width = innerWidth;
    canvas.height = innerHeight;

    window.onresize = () => {
      canvas.width = innerWidth;
      canvas.height = innerHeight;
    };

    let particles = [];
    let musicOn = false;

    function random(min, max) { return Math.random() * (max - min) + min; }

    function createHeart(x, y) {
      particles.push({
        x, y,
        vx: random(-2, 2),
        vy: random(1, 4),
        life: 120,
        size: random(12, 18),
        color: `hsl(${random(190, 220)}, 100%, 70%)`
      });
    }

    function drawHeart(x, y, size, color) {
      ctx.fillStyle = color;
      ctx.beginPath();
      ctx.moveTo(x, y);
      ctx.bezierCurveTo(x - size / 2, y - size / 2, x - size, y + size / 3, x, y + size);
      ctx.bezierCurveTo(x + size, y + size / 3, x + size / 2, y - size / 2, x, y);
      ctx.fill();
    }

    function animate() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);

      particles.forEach((p, i) => {
        p.x += p.vx;
        p.y += p.vy;
        p.life--;
        drawHeart(p.x, p.y, p.size, p.color);
        if (p.life <= 0) particles.splice(i, 1);
      });

      requestAnimationFrame(animate);
    }

    function startCelebration() {
      const name = nameInput.value || 'Teman';
      nameText.textContent = `Untuk ${name} ðŸ’™`;

      if (!musicOn) {
        music.play();
        musicOn = true;
      }

      setInterval(() => {
        for (let i = 0; i < 8; i++) {
          createHeart(random(50, canvas.width - 50), -20);
        }
      }, 500);
    }

    function toggleMusic() {
      if (musicOn) {
        music.pause();
      } else {
        music.play();
      }
      musicOn = !musicOn;
    }

    function shareWA() {
      const name = nameInput.value || 'Teman';
      const text = `ðŸ’™ Undangan Tahun Baru ðŸ’™%0A%0AUntuk ${name} âœ¨%0ASemoga tahun baru membawa kebahagiaan dan harapan baru ðŸŽ†%0A%0ABuka di browser: (link kamu di sini)`;
      window.open(`https://wa.me/?text=${text}`, '_blank');
    }

    function startCountdown() {
      const newYear = new Date('January 1, 2026 00:00:00').getTime();
      setInterval(() => {
        const now = new Date().getTime();
        const diff = newYear - now;
        if (diff <= 0) {
          countdownEl.textContent = 'ðŸŽ‰ SELAMAT TAHUN BARU! ðŸŽ‰';
          return;
        }
        const d = Math.floor(diff / (1000 * 60 * 60 * 24));
        const h = Math.floor((diff / (1000 * 60 * 60)) % 24);
        const m = Math.floor((diff / (1000 * 60)) % 60);
        const s = Math.floor((diff / 1000) % 60);
        countdownEl.textContent = `${d}h ${h}j ${m}m ${s}d`;
      }, 1000);
    }

    startCountdown();
    animate();
  </script>
</body>
